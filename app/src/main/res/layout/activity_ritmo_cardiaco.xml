<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".RitmoCardiaco">

    <ImageView
        android:id="@+id/heartBPM"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:src="@drawable/ic_corazon" />

    <TextView
        android:id="@+id/titulo_option1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/heartBPM"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/settings_option3"
        android:textAlignment="center"
        android:textColor="@color/rojo_light_2"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_ritmo_cardiaco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_option1"
        android:layout_marginTop="20dp"
        android:text="@string/info_option3"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="@string/info_option3" />

</RelativeLayout>