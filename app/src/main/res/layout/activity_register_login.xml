<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterLoginActivity">

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="560dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/heartBPM"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_corazon" />

            <TextView
                android:id="@+id/tipo_usuario_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/rojo_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"/>

            <Button
                android:id="@+id/registrarPantalla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:onClick="irRegistrar"
                android:text="@string/btn_registrarPantalla"
                android:background="@drawable/buttons"
                android:layout_marginBottom="10dp"
                tools:text="@string/btn_registrarPantalla" />

            <Button
                android:id="@+id/loginPantalla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:onClick="irIniciar"
                android:text="@string/btn_loginPantalla"
                android:background="@drawable/buttons"
                tools:text="@string/btn_loginPantalla" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>